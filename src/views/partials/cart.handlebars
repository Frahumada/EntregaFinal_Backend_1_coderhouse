<div class="container p-0">
  <button
    class="btn btn-primary"
    type="button"
    data-bs-toggle="offcanvas"
    data-bs-target="#offcanvasRight"
    aria-controls="offcanvasRight"
  >Mostrar carrito de compras</button>
</div>


<div
  class="offcanvas offcanvas-end"
  tabindex="-1"
  id="offcanvasRight"
  aria-labelledby="offcanvasRightLabel"
>
  <div class="offcanvas-header p-1">
    <h5 id="offcanvasRightLabel">Carrito de compras</h5>
    <button
      type="button"
      class="btn-close text-reset"
      data-bs-dismiss="offcanvas"
      aria-label="Close"
    ></button>
  </div>
  <div class="offcanvas-body">


    {{#each products}}

      <div class="card p-1 mb-2 bg-dark text-white">
        <div class="card-body">
          <h5 class="card-title">{{id_prod.title}}</h5>
          <p class="card-text">{{id_prod.description}}</p>
        </div>
        <ul class="list-group list-group-flush mb-2 bg-dark text-white">
          <li class="list-group-item bg-dark text-white">Category: {{id_prod.category}}</li>
          <li class="list-group-item bg-dark text-white">Price: ${{id_prod.price}}</li>
          <li class="list-group-item bg-dark text-white">Agregado: {{quantity}}</li>
        </ul>
        <div class="card-body">
          <a href="#" class="card-link">Ir al producto</a>
          <a href="#" class="card-link">Elimiar</a>
        </div>
      </div>

    {{/each}}
  </div>
</div>